" Use system clipboard
set clipboard=unnamedplus

" Set leader key
let mapleader = " "

" Reselect visual selection after indenting.
vnoremap < <gv
vnoremap > >gv

" Maintain the cursor position when yanking a visual selection.
vnoremap y myy`y

" Disable annoying command line typo.
nnoremap q: :q<CR>

" Save me!!
inoremap jj <Esc>:w<CR>

" Close buffer
nnoremap <Leader>q :q<CR>

" Save buffer
nnoremap <Leader>w :w<CR>

" Paste replace visual selection without copying it.
vnoremap p "_dP

" Easy insertion of a trailing ; or , from normal mode.
nnoremap ;; A;<Esc>
nnoremap ,, A,<Esc>

" Quickly clear search highlighting.
nnoremap <Leader>k :nohlsearch<CR>

" Move lines up and down.
inoremap <A-j> <Esc>:move .+1<CR>==gi
inoremap <A-k> <Esc>:move .-2<CR>==gi
nnoremap <A-j> :move .+1<CR>==
nnoremap <A-k> :move .-2<CR>==
vnoremap <A-j> :move '>+1<CR>gv=gv
vnoremap <A-k> :move '<-2<CR>gv=gv

" HarpoonIJ keybinds
nmap <leader><C-1> :action SetHarpoon1<cr>
nmap <leader><C-7> :action SetHarpoon2<cr>
nmap <leader><C-3> :action SetHarpoon3<cr>
nmap <leader><C-4> :action SetHarpoon4<cr>

nmap <leader>1 :action GotoHarpoon1<cr>
nmap <leader>2 :action GotoHarpoon2<cr>
nmap <leader>3 :action GotoHarpoon3<cr>
nmap <leader>4 :action GotoHarpoon4<cr>

nmap <leader>H :action ShowHarpoon<cr>
nmap <leader>h :action AddToHarpoon<cr>

" Open Project Window
nmap <leader>e :action ActivateProjectToolWindow<cr>

" Hide all windows
nmap <leader>d :action HideAllWindows<cr>
